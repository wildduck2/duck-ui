{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": false,
    "jsx": "react-jsx",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "rootDir": "./"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
