{
  "$schema": "https://json.schemastore.org/package.json",
  "author": "wilddcuk",
  "bugs": {
    "url": "https://github.com/gentleduck/ui/issues"
  },
  "dependencies": {},
  "description": "libs is a behavioral component abstraction that makes the aero dynamics of the web",
  "devDependencies": {
    "@gentleduck/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "zod": "catalog:",
    "@gentleduck/tsdown-config": "workspace:*",
    "tsdown": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    "./*": "./dist/*/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "homepage": "https://github.com/gentleduck/ui/tree/master/packages/duck-libs#readme",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "name": "@gentleduck/libs",
  "packageManager": "pnpm@10.17.0",
  "peerDependencies": {
    "clsx": "^1.2.1",
    "tailwind-merge": "^1.14.0"
  },
  "private": false,
  "repository": {
    "directory": "packages/duck-libs",
    "type": "git",
    "url": "https://github.com/gentleduck/ui"
  },
  "scripts": {
    "build": "tsdown",
    "ci": "pnpm run lint && pnpm run format && pnpm run build",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "format": "biome format --write ./",
    "lint": "biome lint --write ./",
    "publish": "pnpm run ci && changeset publish",
    "release": "changeset version"
  },
  "type": "module",
  "version": "0.1.8"
}
