{
  "author": "wildduck (https://github.com/wildduck2)",
  "bugs": {
    "url": "https://github.com/gentleeduck/duck-ui/issues"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "axios": "^1.12.2",
    "lucide-react": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "description": "A package for fonts changing while browsing the internet, so you set the fonts you like not the fonts they set.",
  "devDependencies": {
    "@gentleduck/libs": "workspace:*",
    "@gentleduck/registry-ui-duckui": "workspace:*",
    "@gentleduck/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/chrome": "^0.1.31",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "catalog:",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "catalog:",
    "tsdown": "catalog:",
    "tsup": "^8.5.1",
    "tw-animate-css": "^1.2.4",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.3",
    "vite": "catalog:",
    "vite-plugin-web-extension": "^4.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "exports": {
    "./*": "./dist/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "tsconfig.app.json",
    "tsconfig.node.json"
  ],
  "homepage": "https://github.com/gentleeduck/duck-ui/tree/master/packages/duck-extention#readme",
  "keywords": [
    "gentleduck",
    "duck-ui",
    "browser-extension",
    "fonts",
    "typography"
  ],
  "license": "MIT",
  "main": "./index.ts",
  "name": "@gentleduck/duck-extention",
  "packageManager": "pnpm@10.17.0",
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@^7.3.0"
    }
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gentleeduck/duck-ui.git",
    "directory": "packages/duck-extention"
  },
  "scripts": {
    "build": "tsc -b && vite build",
    "build:chrome": "rm -rf dist && pnpm run build && cp manifest-chrome.json dist/manifest.json",
    "build:firefox": "rm -rf dist && pnpm run build && cp manifest-firefox.json dist/manifest.json",
    "dev": "vite",
    "package": "pnpm run build:chrome && pnpm run zip:chrome && pnpm run build:firefox && pnpm run zip:firefox && rm -rf dist",
    "preview": "vite preview",
    "zip:chrome": "cd ./dist && zip -r ../releases/duck-chrome-v1.zip ./* && cd ..",
    "zip:firefox": "cd ./dist && zip -r ../releases/duck-firefox-v1.zip ./* && cd .."
  },
  "type": "module",
  "version": "1.0.0"
}
