{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", ".cache/tsbuildinfo.json"]
    },
    "check-types": {
      "cache": true,
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": true,
      "dependsOn": ["^test"]
    },
    "format": {
      "outputLogs": "new-only",
      "outputs": [".cache/.prettiercache"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/.eslintcache"]
    }
  }
}
